<% content_for :title, "Articles" %>

<div class="w-full">

  <!-- Header -->
  <% if current_user.present? %>
    <div class="flex justify-between items-center mb-6">
      <h1 class="font-bold text-4xl">Articles</h1>
      <%= link_to "New article", new_article_path,
                  class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    </div>
  <% end %>
  <!-- Articles List -->
  <div id="articles" class="min-w-full space-y-10">
    <% if @articles.any? %>
      <%= render partial: 'articles/article_card', collection: @articles, as: :article %>
    <% else %>
      <p class="text-center my-10">No articles found.</p>
    <% end %>
  </div>
</div>
