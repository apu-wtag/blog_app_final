<%= turbo_frame_tag "report_form_#{@reportable.class.name}_#{@reportable.id}" do %>
  <%= form_with(model: [@reportable, @report], class: "mt-2 p-4 border rounded-md bg-gray-50") do |form| %>
    <h3 class="font-bold text-md mb-2">Report Content</h3>
    <% if form.object.errors.any? %>
      <div class="text-red-600 text-sm mb-2">
        <%= form.object.errors.full_messages.to_sentence %>
      </div>
    <% end %>
    <div>
      <%= form.label :reason, "Please provide a reason for your report:", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :reason, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>
    <div class="mt-2 flex items-center gap-4">
      <%= form.submit "Submit Report", class: "cursor-pointer rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500" %>
      <a href="#" onclick="this.closest('turbo-frame').innerHTML = ''; return false;" class="text-sm text-gray-600">Cancel</a>
    </div>
  <% end %>
<% end %>