<div class="p-4 sm:p-6 lg:p-8">
  <h1 class="text-3xl font-bold tracking-tight text-gray-900 mb-6">Admin Dashboard</h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
      <h3 class="text-sm font-medium text-gray-500 truncate">Total Users</h3>
      <p class="mt-1 text-3xl font-semibold tracking-tight text-gray-900"><%= @total_users %></p>
    </div>
    <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
      <h3 class="text-sm font-medium text-gray-500 truncate">Total Articles</h3>
      <p class="mt-1 text-3xl font-semibold tracking-tight text-gray-900"><%= @total_articles %></p>
    </div>
    <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
      <h3 class="text-sm font-medium text-gray-500 truncate">Total Comments</h3>
      <p class="mt-1 text-3xl font-semibold tracking-tight text-gray-900"><%= @total_comments %></p>
    </div>
    <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
      <h3 class="text-sm font-medium text-gray-500 truncate">Total Claps</h3>
      <p class="mt-1 text-3xl font-semibold tracking-tight text-gray-900"><%= @total_claps %></p>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
      <h3 class="text-lg font-medium text-gray-900 mb-4">New Users per Week</h3>
      <%= line_chart @users_per_week, xtitle: "Date", ytitle: "New Users", colors: ["#3b82f6"] %>
    </div>
    <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Articles Posted per Week</h3>
      <%= area_chart @articles_per_week, xtitle: "Date", ytitle: "New Articles", colors: ["#10b981"] %>
    </div>
  </div>

  <div class="grid grid-cols-1 xl:grid-cols-2 gap-6">
    <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Quick Moderation Queue</h3>
      <div class="flow-root">
        <% if @pending_reports.any? %>
          <ul role="list" class="-my-5 divide-y divide-gray-200">
            <% @pending_reports.each do |report| %>
              <li class="py-4">
                <div class="flex items-center space-x-4">
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 truncate">
                      <%= report.reportable.is_a?(Article) ? "Article:" : "Comment on:" %>
                      <%= link_to report.reportable.is_a?(Article) ? report.reportable.title : report.reportable.article.title, report.reportable.article, class: "text-blue-600 hover:underline" %>
                    </p>
                    <p class="text-sm text-gray-500 truncate italic">"<%= report.reason %>"</p>
                    <p class="text-xs text-gray-400">Reported by <%= report.user.name %> <%= time_ago_in_words(report.created_at) %> ago</p>
                  </div>
                  <div>
                    <span class="inline-flex items-center justify-center px-2 py-1 text-xs font-bold leading-none text-red-100 bg-red-600 rounded">PENDING</span>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-center text-gray-500 py-4">The moderation queue is empty. Well done!</p>
        <% end %>
      </div>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Spotlight Articles</h3>
      <div class="space-y-4">
        <div>
          <h4 class="text-sm font-semibold text-gray-600 mb-2">Most Clapped</h4>
          <ul class="divide-y divide-gray-200">
            <% @most_clapped_articles.each do |article| %>
              <li class="py-2 flex justify-between items-center">
                <%= link_to article.title, article, class: "text-sm text-blue-600 hover:underline" %>
                <span class="text-sm font-mono bg-gray-100 px-2 py-0.5 rounded"><%= article.claps_count %> claps</span>
              </li>
            <% end %>
          </ul>
        </div>
        <div>
          <h4 class="text-sm font-semibold text-gray-600 mb-2">Most Commented</h4>
          <ul class="divide-y divide-gray-200">
            <% @most_commented_articles.each do |article| %>
              <li class="py-2 flex justify-between items-center">
                <%= link_to article.title, article, class: "text-sm text-blue-600 hover:underline" %>
                <span class="text-sm font-mono bg-gray-100 px-2 py-0.5 rounded"><%= article.comments_count %> comments</span>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>