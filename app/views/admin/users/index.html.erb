<div class="p-4 sm:p-6 lg:p-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-bold tracking-tight text-gray-900">User Management</h1>
      <p class="mt-2 text-sm text-gray-700">A list of all the users in the system.</p>
    </div>
  </div>

  <%= turbo_frame_tag "users_list" do %>
    <div class="mt-6">
      <%= form_with(url: admin_users_path, method: :get, class: "w-full max-w-md", data: { controller: "autosubmit" }) do |form| %>
        <div class="relative">
          <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
            <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
            </svg>
          </div>
          <%= form.text_field :query, value: params[:query], placeholder: "Search by name or email...",
                              class: "block w-full rounded-md border-gray-300 py-2 pl-10 pr-3 leading-5 text-gray-900 placeholder-gray-500 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
                              data: { autosubmit_target: "query" } %>
        </div>
      <% end %>
    </div>

    <div class="mt-4 flow-root">
      <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
          <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
            <table class="min-w-full divide-y divide-gray-300">
              <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">User</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Stats</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Role</th>
                <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                  <span class="sr-only">Actions</span>
                </th>
              </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 bg-white">
              <% @users.each do |user| %>
                <tr>
                  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm sm:pl-6">
                    <div class="flex items-center">
                      <div class="h-10 w-10 flex-shrink-0">
                        <% if user.profile_picture.attached? %>
                          <%= image_tag user.profile_picture, class: "h-10 w-10 rounded-full" %>
                        <% else %>
                          <div class="h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center text-gray-500 font-bold">
                            <%= user.name.first.upcase %>
                          </div>
                        <% end %>
                      </div>
                      <div class="ml-4">
                        <div class="font-medium text-gray-900"><%= user.name %></div>
                        <div class="text-gray-500"><%= user.email %></div>
                      </div>
                    </div>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <div class="text-gray-900">Articles: <%= user.articles.count %></div>
                    <div class="text-gray-500">Comments: <%= user.comments.count %></div>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <% if user == current_user %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                        <%= user.role.humanize %>
                      </span>
                    <% else %>
                      <%= form_with(model: user, url: update_role_admin_user_path(user), method: :patch,
                                    data: { turbo: false }, class: "inline") do |form| %>
                        <%= form.select :role, User.roles.keys.map { |r| [r.humanize, r] },
                                        { selected: user.role },
                                        class: "block w-full rounded-md border-gray-300 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6",
                                        onchange: "this.form.submit();" %>
                      <% end %>
                    <% end %>
                  </td>

                  <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                    <% if user.discarded? %>
                      <%= button_to "Restore", restore_admin_user_path(user), method: :patch,
                                    class: "text-green-600 hover:text-green-900",
                                    data: { turbo_confirm: "Are you sure you want to restore #{user.name}?" } %>
                    <% else %>
                      <%= link_to "Show", user_path(user), class: "text-indigo-600 hover:text-indigo-900", data: { turbo_frame: "_top" } %>
                      <% unless user == current_user %>
                        <span class="mx-2 text-gray-300">|</span>
                        <%= link_to "Delete", admin_user_path(user), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{user.name}?" }, class: "text-red-600 hover:text-red-900" %>
                      <% end %>
                    <% end %>

                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-8">
      <% if @pagy.present? && @pagy.pages > 1 %>
        <div class="flex flex-col sm:flex-row justify-between items-center gap-4">

          <div class="text-sm text-gray-700">
            <%== pagy_info(@pagy) %>
          </div>

          <div>
            <%== pagy_nav(@pagy) %>
          </div>

        </div>
      <% end %>
    </div>
  <% end %>
</div>