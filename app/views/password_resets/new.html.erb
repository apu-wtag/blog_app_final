<div class="max-w-lg mx-auto mt-10 p-8 border border-gray-200 rounded-lg shadow-sm">
  <h1 class="text-2xl font-bold text-center mb-6">Forgot Password?</h1>
  <%= form_with url: password_resets_path, scope: :password_reset, class: "space-y-6" do |form| %>
    <div>
      <%= form.label :email %>
      <%= form.email_field :email, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>
    <div>
      <%= form.submit "Send Reset Email", class: "w-full flex justify-center py-2 px-4 border rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" %>
    </div>
  <% end %>
</div>