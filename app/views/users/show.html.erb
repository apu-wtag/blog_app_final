<div class="max-w-3xl mx-auto mt-16 px-4">

  <!-- Profile header -->
  <div class="flex items-center space-x-6">
    <% if @user.profile_picture.attached? %>
      <%= image_tag @user.profile_picture, class: "w-32 h-32 rounded-full object-cover shadow-md" %>
    <% else %>
      <div class="w-32 h-32 rounded-full bg-gray-200 flex items-center justify-center text-gray-500 text-4xl font-bold">
        <%= @user.user_name.first.upcase %>
      </div>
    <% end %>

    <div class="flex-1">
      <h1 class="text-4xl font-bold leading-tight"><%= @user.name %></h1>
      <p class="text-gray-600 text-lg mt-1">@<%= @user.user_name %></p>
      <% if policy(@user).update? %>
        <div class="mt-4">
          <%= link_to "Edit Profile", edit_user_path(@user), class: "px-4 py-2 bg-indigo-600 text-white rounded-full shadow hover:bg-indigo-700 text-sm font-medium" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Bio section -->
  <% if @user.bio.present? %>
    <div class="mt-10 prose prose-lg">
      <p><%= @user.bio %></p>
    </div>
  <% end %>

  <!-- Articles section -->
  <div class="mt-12">
    <h2 class="text-2xl font-bold mb-6">
      Articles
    </h2>

    <% if @articles.any? %>
      <div class="border-t border-gray-200">
        <% @articles.each do |article| %>
          <div class="py-5">
            <div class="flex justify-between items-center">
              <h3 class="text-lg font-semibold text-gray-800">
                <%= link_to article.title, article_path(article), class: "hover:text-indigo-600 transition-colors duration-300", data: { turbo_frame: "_top" } %>
              </h3>
              <p class="text-sm text-gray-500 whitespace-nowrap ml-4"><%= article.created_at.strftime("%B %d, %Y") %></p>
            </div>
          </div>
          <div class="border-b border-gray-200"></div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-10 px-6 bg-gray-50 rounded-lg border">
        <p class="text-gray-600">This user hasnâ€™t published any articles yet.</p>
      </div>
    <% end %>
  </div>
  <div class="mt-8">
    <% if @pagy.present? && @pagy.pages > 1 %>
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4">

        <div class="text-sm text-gray-700">
          <%== pagy_info(@pagy) %>
        </div>

        <div>
          <%# Make sure to use the pagy_tailwind_nav helper for Tailwind styles %>
          <%== pagy_nav(@pagy) %>
        </div>

      </div>
    <% end %>
  </div>
</div>
